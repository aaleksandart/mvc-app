@model mvc_app_login.Models.Forms.UploadForm

@{
    ViewData["Title"] = "Upload picture";
}

<div id="top-section" class="topsection-bg">
    <div class="container">
        <partial name="_HeaderPartial" />
    </div>
</div>

<div id="" class="signup-section">
    <div class="container">
        <div class="sign-up">
            <h2>Upload profile picture</h2>
            <p class="register-text">Want to go back home?<br>Go to the homepage <a asp-controller="Home" asp-action="Index">here.</a></p>
            <form asp-action="UploadPicture" asp-route-id="@User.FindFirst("UserId").Value" enctype="multipart/form-data">
                <div class="input-pair">

                    <div class="input-error">
                        <label asp-for="Picture">File (.png,  .jpg,  .jpeg,  .gif,  .tif )</label>
                        <input asp-for="Picture" type="file" accept=".png, .jpg, .jpeg, .gif, .tif">
                        <span asp-validation-for="Picture" class="display-error" id="name-email-error"></span>
                    </div>
                </div>
                <div class="display-error ps-2 pe-2">
                    @Model.ErrorMessage
                </div>
                <button type="submit" class="btn btn-blue btn-block">Update profile</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}